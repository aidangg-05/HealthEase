<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/patienticonimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/user_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/patient_name_aboutpage"
            android:layout_width="203dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toEndOf="@+id/patienticonimg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/patient_email_aboutpage"
            android:layout_width="203dp"
            android:layout_height="38dp"
            android:layout_marginTop="52dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toEndOf="@+id/patienticonimg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textemail1"
            android:layout_width="410dp"
            android:layout_height="34dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Update Email:"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.155"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/change_email_patient"
            android:layout_width="344dp"
            android:layout_height="54dp"
            android:background="@drawable/rounded_edittext"
            android:elevation="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textpass1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.597"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textemail1"
            app:shapeAppearanceOverlay="@style/RoundedCorners"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />


        <TextView
            android:id="@+id/textpass1"
            android:layout_width="406dp"
            android:layout_height="35dp"
            android:layout_marginTop="350dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Update Password:"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.155"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/change_password_patient"
            android:layout_width="344dp"
            android:layout_height="54dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/rounded_edittext"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textpass1"
            app:shapeAppearanceOverlay="@style/RoundedCorners"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/changedetailsbtndoc"
            android:layout_width="274dp"
            android:layout_height="50dp"
            android:layout_marginTop="68dp"
            android:backgroundTint="#FFFFFF"
            android:elevation="15dp"
            android:text="CHANGE"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_password_patient"
            app:strokeColor="#FFDD77"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>